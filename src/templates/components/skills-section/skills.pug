script(type='text/x-template')#skills-list
    .skills__wrapper
        ul.skills
            li.skills__item(v-for='skill in skills')
                skills-row(
                    :skill='skill'
                )

script(type='text/x-template')#skills-row
    .skills-row
        h3.skills-row__title {{skill.category}}
        ul.skills-row__list
            li.skills-row__item(v-for='skillItem in skill.skills')
                skill(
                    :skill='skillItem'
                )

script(type='text/x-template')#skill
    .skill
        svg.skill__icon(viewBox='0 0 100 100')
            circle.skill__circle.skill__circle--under(cx='50' cy='50' r='40')
            circle.skill__circle.skill__circle--above(cx='50' cy='50' r='40' ref='color-circle' transform='rotate(180 50 50)' stroke='url(#gradient)')
            linearGradient(id='gradient' x1='0%' y1='0%' x2='100%' y2='0%')
                stop(offset='0%' stop-color='#d0731b')
                stop(offset='100%' stop-color='#dc9322')
        h4.skill__tech {{skill.title}}